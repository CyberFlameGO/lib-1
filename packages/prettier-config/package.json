{
  "name": "@younho9/prettier-config",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Younho Choo <younho9.choo@gmail.com>",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "yarn build",
    "build": "babel index.ts -o dist/index.js",
    "lint": "concurrently yarn:lint:*",
    "lint:src": "eslint ./index.ts --config ../../.eslintrc.js",
    "lint:types": "tsc --noEmit"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ],
    "sourceType": "unambiguous"
  },
  "devDependencies": {
    "@types/prettier": "^2.3.2",
    "prettier": "^2.3.2"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
