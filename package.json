{
  "name": "@younho9/lib",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/younho9/lib.git"
  },
  "license": "MIT",
  "author": "Younho Choo <younho9.choo@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn pkgs:check",
    "prepare": "yarn git:install-hooks && yarn build",
    "prebuild": "yarn clean:dist && yarn pkgs babel-preset build",
    "build": "lerna run build --no-private --stream",
    "clean": "concurrently yarn:clean:*",
    "clean:modules": "lerna clean --yes && rimraf node_modules",
    "clean:dist": "yarn lerna exec rimraf dist",
    "format:code": "prettier --write packages/**/*.{js,jsx,ts,tsx,json,css,md,mdx}",
    "format:pkg": "sort-package-json",
    "git:commit-msg": "commitlint --edit",
    "git:install-hooks": "husky install",
    "git:pre-commit": "lint-staged",
    "lint": "concurrently yarn:lint:*",
    "lint:pkgs": "lerna run lint --no-private --stream",
    "lint:root": "eslint *.{js,ts}",
    "lint:types": "lerna run lint:types --no-private --stream",
    "pkgs": "manypkg run",
    "pkgs:check": "manypkg check",
    "pkgs:fix": "manypkg fix",
    "prerelease": "yarn test",
    "release": "yarn lerna publish",
    "test": "lerna run test --stream"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,mdx}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "prettier": "@younho9/prettier-config",
  "dependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@manypkg/cli": "0.18.0",
    "@types/jest": "27.0.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "4.31.1",
    "@typescript-eslint/parser": "4.31.1",
    "@younho9/babel-preset": "0.2.2",
    "@younho9/eslint-plugin": "0.1.5",
    "@younho9/prettier-config": "1.3.1",
    "concurrently": "6.2.1",
    "conditional-type-checks": "1.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.25.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.1",
    "jest": "27.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.0",
    "rimraf": "3.0.2",
    "sort-package-json": "1.50.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tsd": "0.17.0",
    "typescript": "^4.3.5"
  }
}
